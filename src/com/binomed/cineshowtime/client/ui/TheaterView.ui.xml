<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field="res" type="com.binomed.cineshowtime.client.resources.CstResource" />
	<ui:with field="i18n" type="com.binomed.cineshowtime.client.resources.I18N" />
	
	<!-- 
	<g:DisclosurePanel ui:field="theaterPanel" styleName="{style.panel}">
	-->
	<g:DisclosurePanel ui:field="theaterPanel">
		<g:VerticalPanel>
			<g:HorizontalPanel>
				<g:VerticalPanel>
					<g:Label ui:field="theaterName" />
					<g:Label ui:field="theaterPlace" />
					<g:Label ui:field="theaterPhone" />
					<g:HorizontalPanel>
						<g:Image resource='{res.star}' />
						<g:Hyperlink ui:field="nearSearch" text="{i18n.addFavorites}" />
					</g:HorizontalPanel>
				</g:VerticalPanel>
				<g:VerticalPanel ui:field="theaterMap" />
			</g:HorizontalPanel>
			<g:VerticalPanel ui:field="theaterCoverflow" />
		</g:VerticalPanel>
	</g:DisclosurePanel>
	
	<ui:style>
		.header.panel {
		    color: #FFFFFF;
		}
		
		
		
	</ui:style>
	
</ui:UiBinder> 