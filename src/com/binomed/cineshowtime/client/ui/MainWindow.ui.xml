<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:cst="urn:import:com.binomed.cineshowtime.client.ui">
	
	<ui:with field="res" type="com.binomed.cineshowtime.client.resources.CstResource" />
	<ui:with field="i18n" type="com.binomed.cineshowtime.client.resources.I18N" />
	
	<g:DockLayoutPanel unit="EM" styleName="{style.mainPanel}" width="100%"  >
		<!-- Header -->
		<g:north size='5'>
			<g:HTMLPanel>
				<p align="center"><!--  -->
				<g:Image resource='{res.Icone_512_512}' width="48px" height="48px" /><g:Image resource='{res.logo}' />
				</p>
							
			</g:HTMLPanel>
		</g:north>
		<!-- App Body -->
		<g:center>			
			<g:TabLayoutPanel barHeight="2" width="100%" height="100%" barUnit="EM" ui:field="appBodyPanel">
				<g:tab >
					<g:customHeader><g:Label text="{i18n.theaterTabLabel}" /></g:customHeader>
					<g:ScrollPanel>
						<g:VerticalPanel>
							<cst:SearchTheater />
							<g:VerticalPanel ui:field="theatersContent" width="100%" />
						</g:VerticalPanel>
					</g:ScrollPanel>
				</g:tab>
				<g:tab>
					<g:customHeader><g:Label text="{i18n.parametersTabLabel}" /></g:customHeader>
					<g:VerticalPanel ui:field="paramsContent" styleName="{style.allWidth}" />
				</g:tab>		
			</g:TabLayoutPanel>
		</g:center>
		<!-- Footer -->
		<g:south size='2'>
			<g:HorizontalPanel>
				<g:HTMLPanel>links...</g:HTMLPanel>
			</g:HorizontalPanel>
		</g:south>
	</g:DockLayoutPanel>
	
	<ui:style>
		.mainPanel {
			background-color: black;
		    color: #FFFFFF;
		    margin-left: 10%;
		    margin-right: 10%;
		}
		
		.allWidth {
		    width: 100%;
		    color: #FFFFFF;
		}
		
	</ui:style>

</ui:UiBinder> 