<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:cst="urn:import:com.binomed.cineshowtime.client.ui">
	
	<ui:style src="../resources/css/CstStyle.css" />
	<ui:with field="res" type="com.binomed.cineshowtime.client.resources.CstResource" />
	<ui:with field="i18n" type="com.binomed.cineshowtime.client.resources.I18N" />

	<g:DockLayoutPanel unit="EM" styleName="{style.mainPanel}" >
		<!-- Header -->
		<g:north size='5'>
			<g:HTMLPanel>
				<p align="center">
					<g:Image resource='{res.logo}' />
				</p>
			</g:HTMLPanel>
		</g:north>
		
		<!-- Body -->
		<g:center>			
			<g:HTMLPanel>
				<g:TabLayoutPanel barHeight="2" barUnit="EM" ui:field="appBodyPanel" width="1024px" height="600px">
					<!-- Theaters list Tab -->
					<g:tab >
						<g:customHeader><g:Label text="{i18n.theaterTabLabel}" /></g:customHeader>
						<g:ScrollPanel width="100%">
							<g:VerticalPanel width="100%">
								<cst:SearchTheater ui:field="searchField" />
								<g:VerticalPanel ui:field="theatersContent" width="100%"/>
							</g:VerticalPanel>
						</g:ScrollPanel>
					</g:tab>
					<!-- Parameters Tab -->
					<g:tab>
						<g:customHeader><g:Label text="{i18n.parametersTabLabel}" /></g:customHeader>
						<g:ScrollPanel>
							<cst:ParameterView ui:field="paramsContent" />
						</g:ScrollPanel>
					</g:tab>		
				</g:TabLayoutPanel>
			</g:HTMLPanel>
		</g:center>
		
		<!-- Footer -->
		<g:south size='2'>
			<g:HTMLPanel>
				<p align="center">
					<g:Label text='links...' />
				</p>
			</g:HTMLPanel>
		</g:south>
	</g:DockLayoutPanel>
	
</ui:UiBinder> 