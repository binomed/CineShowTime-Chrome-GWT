<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field="res" type="com.binomed.cineshowtime.client.resources.CstResource" />
	<ui:with field="i18n" type="com.binomed.cineshowtime.client.resources.i18n.I18N" />
	
	<g:HTMLPanel styleName="{res.css.theaterPanelHeader}">
		<div style="float:left;">
			<div style="float:left; padding-right:10px">
				<g:Image ui:field="theaterOpen" />
			</div>
			<div style="float:right;">
				<g:Label ui:field="theaterName" styleName="{res.css.theaterNameHeader}"/>
				<g:HorizontalPanel>
					<g:Label ui:field="theaterPlace" styleName="{res.css.theaterInfoHeader}"/>
					<g:Label ui:field="theaterPhone" styleName="{res.css.theaterInfoHeader}" />
				</g:HorizontalPanel>
			</div>
		</div>
		<div style="text-align:right;">
			<g:Image ui:field="theaterMap" resource='{res.maps}' />
			<g:Image ui:field="theaterFav" resource='{res.btn_stat_big_off}'/>
		</div>
	</g:HTMLPanel>

</ui:UiBinder> 