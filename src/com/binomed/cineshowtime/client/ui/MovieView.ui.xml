<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:cst="urn:import:com.binomed.cineshowtime.client.ui">
	
	<ui:with field="res" type="com.binomed.cineshowtime.client.resources.CstResource" />
	<ui:with field="i18n" type="com.binomed.cineshowtime.client.resources.I18N" />
	
	<g:VerticalPanel width="100%" height="100%" >
		<g:ScrollPanel>
		<g:HTMLPanel>
			<table width="100%" >
				<tr>
					<td width="20%"><g:Image resource="{res.no_poster}" ui:field="imgPoster" /></td>
					<td width="30%">
						<g:VerticalPanel>
							<g:Label ui:field="movieName"/>
							<g:HorizontalPanel>
								<g:Label ui:field="movieTime"/>
								<g:Label ui:field="sepMovieTimeStyle" text=" - "/>
								<g:Label ui:field="movieStyle"/>
							</g:HorizontalPanel>
							<g:Hyperlink ui:field="movieLinkImdb" text="{i18n.imdbLink}" />
							<g:VerticalPanel ui:field="movieRate" />
						</g:VerticalPanel>
					</td>
					<td width="50%">
							<g:CaptionPanel ui:field="movieSeanceGroup" width="100%">
								<g:VerticalPanel ui:field="movieSeanceList">
								</g:VerticalPanel>
							</g:CaptionPanel>					
					</td>
				</tr>
				<tr>
					<td colspan="3">
						<g:DisclosurePanel ui:field="groupMoviePlot">
							<g:Label ui:field="moviePlot" />
						</g:DisclosurePanel>
					</td>
				</tr>
				<tr>
					<td colspan="3">
						<g:DisclosurePanel ui:field="groupMovieBA">
							<g:VerticalPanel ui:field="movieTrailerCoverflow" />
						</g:DisclosurePanel>
					</td>
				</tr>
				<tr>
					<td colspan="3">
						<g:DisclosurePanel ui:field="groupMovieCritique">
							<g:VerticalPanel ui:field="movieReview" />
						</g:DisclosurePanel>
					</td>
				</tr>
			</table>
		</g:HTMLPanel>
		</g:ScrollPanel>
	</g:VerticalPanel>
	
</ui:UiBinder> 