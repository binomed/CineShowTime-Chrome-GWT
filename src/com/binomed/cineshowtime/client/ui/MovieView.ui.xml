<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:cst="urn:import:com.binomed.cineshowtime.client.ui">
	
	<ui:with field="res" type="com.binomed.cineshowtime.client.resources.CstResource" />
	<ui:with field="i18n" type="com.binomed.cineshowtime.client.resources.I18N" />
	
	<g:ScrollPanel>
		<g:HTMLPanel width="100%">
			<div>
				<div style="float:left;" >		
					<g:Image resource="{res.no_poster}" ui:field="imgPoster" />
				</div>
				<div style="padding-left:10px;float:left;">
					<g:HorizontalPanel>
						<g:Label ui:field="movieName" styleName="{res.css.movieName}"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label text="{i18n.year}" styleName="{res.css.movieLabel}"/>
						<g:Label ui:field="movieYear"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label text="{i18n.duration}" styleName="{res.css.movieLabel}"/>
						<g:Label ui:field="movieTime"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label text="{i18n.genre}" styleName="{res.css.movieLabel}"/>
						<g:Label ui:field="movieStyle"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label text="{i18n.director}" styleName="{res.css.movieLabel}"/>
						<g:Label ui:field="movieDirector"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label text="{i18n.actor}" styleName="{res.css.movieLabel}"/>
						<g:Label ui:field="movieActor"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label text="{i18n.rate}" styleName="{res.css.movieLabel}"/>
						<g:Label ui:field="movieRateText"/>
						<cst:RateView ui:field="movieRate" />
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Image resource="{res.imdb}" />
						<g:Hyperlink ui:field="movieLinkImdb" text="{i18n.imdbLink}" />
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Image resource="{res.wikipedia}" />
						<g:Hyperlink ui:field="movieLinkWikipedia" text="{i18n.wikipediaLink}" />
					</g:HorizontalPanel>
				</div>
				<div style="padding-left:100px;float:left;">
					<cst:ProjectionView ui:field="movieProjections"/>
				</div>
			</div>
			<div style="clear:both;">			
				<cst:MovieHeaderSeparator ui:field="moviePlotSeparator"/>
				<g:DisclosurePanel ui:field="groupMoviePlot">
					<g:Label ui:field="moviePlot" />
				</g:DisclosurePanel>
				<cst:MovieHeaderSeparator ui:field="movieTrailerSeparator"/>
				<g:DisclosurePanel ui:field="groupMovieBA">
					<g:VerticalPanel ui:field="movieTrailerCoverflow" />
				</g:DisclosurePanel>
				<cst:MovieHeaderSeparator ui:field="movieReviewSeparator"/>
				<g:DisclosurePanel ui:field="groupMovieCritique">
					<g:VerticalPanel ui:field="movieReview" />
				</g:DisclosurePanel>
			</div>
		</g:HTMLPanel>
	</g:ScrollPanel>
	
</ui:UiBinder> 