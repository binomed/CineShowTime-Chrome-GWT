<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:db="urn:import:com.google.gwt.user.datepicker.client">
	
	<ui:style src="../resources/css/CstStyle.css" />
	<ui:with field="res" type="com.binomed.cineshowtime.client.resources.CstResource" />
	<ui:with field="i18n" type="com.binomed.cineshowtime.client.resources.I18N" />
	
	<g:DisclosurePanel ui:field="searchPanel">
		<g:HTMLPanel>
			<table>
				<tr>
					<td><g:Label text="{i18n.locationLabel}" /></td>
					<td><g:TextBox ui:field="locationSearch"/></td>
					<td><g:Label text="{i18n.dateLabel}" /></td>
					<td><db:DateBox ui:field="dateSearch"/>	</td>
					<td><g:Button ui:field="searchButton" text="{i18n.searchBtn}"/></td>
				</tr>
				<!-- 
				<tr>
					<td><g:Label text="{i18n.theaterMovieLabel}" /></td>
					<td><g:TextBox ui:field="movieSearch"/></td>
				</tr>
				 -->
				<tr>
					<td><g:Image resource='{res.gps}' styleName="{style.pointerHand}"/></td>
					<td><g:Hyperlink ui:field="nearSearch" text="{i18n.nearLink}" styleName="{style.pointerHand}"/></td>
					<td><g:Image resource='{res.star}' styleName="{style.pointerHand}" /></td>
					<td><g:Hyperlink ui:field="favoriteSearch" text="{i18n.favoriteLink}" styleName="{style.pointerHand}" /></td>
				</tr>
			</table>
		</g:HTMLPanel>
	</g:DisclosurePanel>
	
</ui:UiBinder> 