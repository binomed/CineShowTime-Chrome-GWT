<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field="res" type="com.binomed.cst.client.resources.CstResource" />
	<ui:with field="i18n" type="com.binomed.cst.client.resources.I18N" />
	
	<g:DisclosurePanel ui:field="searchPanel">
		<g:HTMLPanel>
			<table>
				<tr>
					<td><g:Label text="{i18n.locationLabel}" /></td>
					<td><g:TextBox ui:field="location"/></td>
					<td>
						<g:HTMLPanel>
							<table>
								<tr>
									<td><g:Image resource='{res.gps}' /></td>
									<td><g:Hyperlink ui:field="nearSearch" text="{i18n.nearLink}" /></td>
									<td><g:Image resource='{res.star}' /></td>
									<td><g:Hyperlink ui:field="favoriteSearch" text="{i18n.favoriteLink}" /></td>
								</tr>
							</table>
						</g:HTMLPanel>
					</td>
				</tr>
				<tr>
					<td><g:Label text="{i18n.theaterMovieLabel}" /></td>
					<td><g:TextBox ui:field="movie"/></td>
				</tr>
				<tr>
					<td><g:Label text="{i18n.dateLabel}" /></td>
					<td><g:TextBox ui:field="date"/></td>
					<td></td>
				</tr>
				<tr>
					<td><g:Button ui:field="searchButton" text="{i18n.searchBtn}"/></td>
				</tr>
			</table>
		</g:HTMLPanel>
	</g:DisclosurePanel>
	
</ui:UiBinder> 